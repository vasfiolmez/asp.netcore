@model List<Course>

    @section Header {
    @await Html.PartialAsync("_Header")
    }
    <diw class="row">
        @foreach(var item in Model)
        {
        @if(item.isHome && item.isActive)
        {
        <div class="col-3">
            <div class="card">
                <img src="~/img/@item.Image" alt="">
                <div class="card-body">
                    <h5 class="vard-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <a class="btn btn-primary" asp-controller="Course" asp-action="Details"
                        asp-route-id="@item.Id">Detay</a>
                </div>
            </div>
        </div>
        }
        }
    </diw>