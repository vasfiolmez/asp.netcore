@model IEnumerable<AppRole>
    <a class="btn btn-primary" href="/Roles/Create">Create Role</a>

    <table class="table table-sm table-bordered">
        <tr>
            <th>Id</th>
            <th>Role Adı</th>
            <th>Kullanıcılar</th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
        <tr>
            <td colspan="4" class="text-danger">Rol yok</td>
        </tr>
        }
        @foreach (var role in Model)
        {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td asp-role-users="@role.Id"></td>
            <td>
                <form method="post">
                    <a asp-action="Edit" asp-route-id="@role.Id" class=" btn btn-primary btn-sm">Edit</a>
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
        }
    </table>