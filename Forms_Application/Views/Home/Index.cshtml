@model ProductViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="car card-body my-3">
    <form asp-action="Index" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <select name="category" class="form-select"
                        asp-items="@(new SelectList(Model.Categories,"CategoryId","Name",Model.SelectedValue))">
                        <option value="0">
                            Hepsi
                        </option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
            </div>
        </div>
    </form>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width: 100px;">@Html.DisplayNameFor(x => x.Products[0].ProductId)</th>
            <th style="width: 100px;">@Html.DisplayNameFor(x => x.Products[0].Name)</th>
            <th style="width: 100px;">@Html.DisplayNameFor(x => x.Products[0].Price)</th>
            <th style="width: 100px;">@Html.DisplayNameFor(x => x.Products[0].Image)</th>
            <th style="width: 130px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prd in Model.Products)
        {
            <tr>
                <td>@prd.ProductId</td>
                <td>@prd.Name</td>
                <td>@prd.Price</td>
                <td>
                    <img src="~/img/@prd.Image" class="img-fluid" alt="">
                </td>
                <td>
                    <a href="" class="btn btn-sm btn-primary">Düzenle</a>
                    <a href="" class="btn btn-sm btn-danger">Kaldır</a>
                </td>
            </tr>
        }
    </tbody>
</table>